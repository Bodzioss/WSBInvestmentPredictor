@using WSBInvestmentPredictor.Expenses.Models
@using Microsoft.JSInterop
@using WSBInvestmentPredictor.Expenses.Shared.Dto
@namespace WSBInvestmentPredictor.Expenses.Components

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Category Analysis</h5>
        @if (!string.IsNullOrEmpty(SelectedCategory))
        {
            <button class="btn btn-sm btn-outline-secondary" @onclick="ClearFilter">
                <i class="bi bi-x-circle"></i> Clear Filter
            </button>
        }
    </div>
    <div class="card-body">
        @if (Analysis != null && Analysis.Any())
        {
            <div class="row">
                <div class="col-md-8">
                    <canvas id="categoryChart" width="400" height="300"></canvas>
                </div>
                <div class="col-md-4">
                    <div class="summary-stats">
                        <h6>Summary</h6>
                        <div class="stat-item">
                            <span class="stat-label">Total Transactions:</span>
                            <span class="stat-value">@TotalTransactions</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Categorized:</span>
                            <span class="stat-value">@CategorizedTransactions</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Uncategorized:</span>
                            <span class="stat-value">@UncategorizedTransactions</span>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center text-muted">
                <i class="bi bi-pie-chart" style="font-size: 3rem;"></i>
                <p class="mt-2">No data available for analysis</p>
            </div>
        }
    </div>
</div>
<style>
    .summary-stats {
        padding: 1rem;
        background-color: #f8f9fa;
        border-radius: 0.375rem;
    }

    .stat-item {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
        padding: 0.25rem 0;
        border-bottom: 1px solid #dee2e6;
    }

    .stat-item:last-child {
        border-bottom: none;
        margin-bottom: 0;
    }

    .stat-label {
        font-weight: 500;
        color: #6c757d;
    }

    .stat-value {
        font-weight: 600;
        color: #212529;
    }

    #categoryChart {
        cursor: pointer;
    }
</style> 