@page "/"
@using Microsoft.Extensions.Localization
@using WSBInvestmentPredictor.Frontend.Shared
@using Radzen.Blazor
@inject IStringLocalizer<SharedResource> Loc

<PageTitle>@Loc["AppTitle"]</PageTitle>

<div class="container mt-5">
    <div class="row">
        <div class="col-12 text-center mb-4">
            <h1 class="display-4">@Loc["AppTitle"]</h1>
            <p class="lead">@Loc["AppDescription"]</p>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-4 mb-4">
            <RadzenCard Class="h-100 rz-shadow-1">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-graph-up" style="font-size: 1.5rem; color: var(--rz-primary);"></i>
                    <h5 class="card-title mb-0 ms-2">@Loc["TrendAnalysis"]</h5>
                </div>
                <p class="card-text">@Loc["TrendAnalysisDescription"]</p>
            </RadzenCard>
        </div>
        
        <div class="col-md-4 mb-4">
            <RadzenCard Class="h-100 rz-shadow-1">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-robot" style="font-size: 1.5rem; color: var(--rz-primary);"></i>
                    <h5 class="card-title mb-0 ms-2">@Loc["AIPowered"]</h5>
                </div>
                <p class="card-text">@Loc["AIPoweredDescription"]</p>
            </RadzenCard>
        </div>
        
        <div class="col-md-4 mb-4">
            <RadzenCard Class="h-100 rz-shadow-1">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-shield-check" style="font-size: 1.5rem; color: var(--rz-primary);"></i>
                    <h5 class="card-title mb-0 ms-2">@Loc["ReliableData"]</h5>
                </div>
                <p class="card-text">@Loc["ReliableDataDescription"]</p>
            </RadzenCard>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12 text-center">
            <h3>@Loc["HowToStart"]</h3>
            <p class="lead">@Loc["HowToStartDescription"]</p>
        </div>
    </div>
</div>
